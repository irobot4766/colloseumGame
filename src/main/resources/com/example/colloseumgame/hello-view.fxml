<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="400" prefWidth="781.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.colloseumgame.FXMLUpdate">
    <tabs>

        <!-- ======================= SETUP TAB ======================= -->
        <Tab fx:id="setupTab" closable="false" text="Setup">
            <AnchorPane style="-fx-background-color: #f4f4f4;">

                <VBox alignment="CENTER" layoutY="7.0" prefHeight="400.0" prefWidth="656.0" spacing="25" AnchorPane.bottomAnchor="-7.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="7.0">

                    <!-- Title -->
                    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Welcome to the Colosseum" />

                    <!-- Story / King's Message -->
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555; -fx-padding: 0 30 0 30;" text="The King grants you 50 coins and a single upgrade point. Choose your path, peasant, and fight for survival!" textAlignment="CENTER" wrapText="true" />

                    <!-- Skill Selection -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Choose Your Starting Skill:" />

                        <HBox alignment="CENTER" spacing="15">
                            <ToggleButton fx:id="strengthToggle" onAction="#strengthToggle" style="-fx-text-fill: #333; -fx-font-size: 14;" text="Strength" />
                            <ToggleButton fx:id="defenseToggle" onAction="#defenseToggle" style="-fx-text-fill: #333; -fx-font-size: 14;" text="Defense" />
                            <ToggleButton fx:id="luckToggle" onAction="#luckToggle" style="-fx-text-fill: #333; -fx-font-size: 14;" text="Luck" />
                        </HBox>
                    </VBox>

                    <!-- Start Button -->
                    <Button fx:id="startButton" onAction="#startGame" style="-fx-text-fill: #000; -fx-font-weight: bold; -fx-font-size: 14; -fx-padding: 8 20 8 20;" text="Enter the Colosseum" />

                </VBox>
            </AnchorPane>
        </Tab>
      <Tab fx:id="shopTab" text="Shop">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <ProgressBar fx:id="strengthBar" layoutX="96.0" layoutY="119.0" prefWidth="200.0" progress="0.2" />
                  <Label alignment="CENTER" layoutX="78.0" layoutY="23.0" prefHeight="32.0" prefWidth="236.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Stats" textAlignment="CENTER" />
                  <Label alignment="CENTER" layoutX="153.0" layoutY="92.0" prefHeight="20.0" prefWidth="87.0" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Strength" textAlignment="CENTER" />
                  <Line endY="257.0" layoutX="391.0" layoutY="75.0" startY="-52.0" />
                  <Line endX="265.0" endY="-52.0" layoutX="64.0" layoutY="120.0" startY="-52.0" />
                  <ProgressBar fx:id="defenseBar" layoutX="96.0" layoutY="192.0" prefWidth="200.0" progress="0.5" />
                  <Label alignment="CENTER" layoutX="153.0" layoutY="165.0" prefHeight="20.0" prefWidth="87.0" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Defense" textAlignment="CENTER" />
                  <ProgressBar fx:id="luckBar" layoutX="96.0" layoutY="266.0" prefWidth="200.0" progress="0.5" />
                  <Label alignment="CENTER" layoutX="153.0" layoutY="239.0" prefHeight="20.0" prefWidth="87.0" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Luck" textAlignment="CENTER" />
                  <Label fx:id="items" alignment="CENTER" layoutX="38.0" layoutY="300.0" prefHeight="5.0" prefWidth="317.0" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Items: " textAlignment="CENTER" />
                  <Label alignment="CENTER" layoutX="474.0" layoutY="23.0" prefHeight="32.0" prefWidth="236.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Buy | Upgrade" textAlignment="CENTER" />
                  <Line endX="265.0" endY="-52.0" layoutX="460.0" layoutY="120.0" startY="-52.0" />
                  <ListView fx:id="upgradeListView" layoutX="600.0" layoutY="105.0" prefHeight="120.0" prefWidth="116.0" />
                  <ListView fx:id="itemListView" layoutX="461.0" layoutY="105.0" prefHeight="121.0" prefWidth="116.0" />
                  <Label alignment="CENTER" layoutX="225.0" layoutY="341.0" prefHeight="20.0" prefWidth="332.0" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Items are only usable for one battle" textAlignment="CENTER" />
                  <Button layoutX="612.0" layoutY="243.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="92.0" text="Upgrade">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button layoutX="473.0" layoutY="243.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="92.0" text="Buy">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
        </content>
      </Tab>
      <Tab text="Battle">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
        </content>
      </Tab>

    </tabs>
</TabPane>
